using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Urasandesu.NAnonym.ILTools;
using System.ComponentModel;
using Urasandesu.NAnonym.Mixins.System;

namespace Urasandesu.NAnonym.Formulas
{
    public <#= IsAbstract ? "abstract " : "" #>partial class <#= TypeName #><#= BaseTypeName == null ? "" : " : " + BaseTypeName #>
    {
<#+ 
        if (BaseTypeName == null)
        {
#>
        public <#= TypeName #>()
            : base()
        {
            InitializeForCodeGeneration();
            Initialize();
        }
<#+ 
        }
#>

        protected <#= BaseTypeName == null ? "virtual" : "override" #> void InitializeForCodeGeneration()
        {
<#+ 
        if (BaseTypeName != null)
        {
#>
            base.InitializeForCodeGeneration();
<#+ 
			if (NodeType != NodeType.None)
			{
#>
			NodeType = NodeType.<#= NodeType.ToString() #>;
<#+ 
			}
#>
<#+ 
			if (!string.IsNullOrEmpty(TypeDeclaration))
			{
#>
			TypeDeclaration = <#= TypeDeclaration #>;
<#+ 
			}
#>
<#+ 
        }
#>
<#+ 
            foreach (var property in TemplateProperties)
            {
#>
            <#= property.Name #> = <#= property.Default #>;
<#+ 
            }
#>
        }

<#+ 
        foreach (var property in TemplateProperties)
        {
#>
        public const string NameOf<#= property.Name #> = "<#= property.Name #>";
        <#= property.TypeName #> <#= property.Name.ToCamel() #>;
        public <#= property.HideBySig ? "new " : "" #><#= property.TypeName #> <#= property.Name #> 
        { 
            get { return <#= property.CamelName #>; } 
            set 
            {
<#+ 
            if (property.IsNode)
            {
				if (property.AsNode)
				{
#>
                SetNode(NameOf<#= property.Name #>, value, ref <#= property.Name.ToCamel() #>);
<#+ 
				}
                else
                {
#>
                SetFormula(NameOf<#= property.Name #>, value, ref <#= property.Name.ToCamel() #>);
<#+ 
                }
            }
            else
            {
#>
                SetValue(NameOf<#= property.Name #>, value, ref <#= property.Name.ToCamel() #>);
<#+ 
            }
#>
<#+ 
            if (property.HideBySig)
            {
#>
                base.<#= property.Name #> = value;
<#+ 
            }
#>
            }
        }
<#+ 
            if (property.HasToStringValueIfDefault)
            {
#>
        public abstract string <#= property.Name #>ToStringValueIfDefault { get; }
<#+ 
            }
#>
<#+ 
        }
        
        if (!IsAbstract)
        {
#>


        public override void Accept(IFormulaVisitor visitor)
        {
            visitor.Visit(this);
        }
<#+ 
        }
#>


        protected <#= BaseTypeName == null ? "virtual" : "override" #> void PinCore()
        {
<#+ 
            foreach (var property in TemplateProperties.Where(_ => _.IsNode))
            {
#>
            Formula.Pin(<#= property.Name #>);
<#+ 
            }
#>
<#+ 
            if (BaseTypeName != null)
            {
#>
            base.PinCore();
<#+  
            }
#>
        }


        public <#= BaseTypeName == null ? "virtual" : "override" #> void AppendTo(StringBuilder sb)
        {
<#+ 
        if (BaseTypeName != null)
        {
#>
            base.AppendTo(sb);
<#+ 
        }
#>
<#+
		TemplateProperties.Where(_ => !_.ProhibitsToString).ForEach(
        (property, propertyIndex) =>
        {
            if (BaseTypeName != null || 0 < propertyIndex)
            {
#>
            sb.Append(NodeToString.Delimiter);
<#+
            }            
            WriteAppendingProperty(property);
        });
#>
        }
    }
}

<#+
        
        return this.GenerationEnvironment.ToString();
    }
    
    void WriteAppendingProperty(FormulaTemplateProperty property)
    {
#>
            sb.Append(NodeToString.StartOfName);
            sb.Append(NameOf<#= property.Name #>);
            sb.Append(NodeToString.EndOfName);
<#+ 
        if (property.IsNode)
        {
#>
            if (<#= property.Name #> == null)
            {
                sb.Append(NodeToString.NullString);
            }
            else
            {
                <#= property.Name #>.AppendWithStartEndTo(sb);
            }
<#+  
        }
        else
        {
#>
<#+ 
            if (!property.HasToStringValueIfDefault)
            {
#>
            NodeToString.AppendValueTo(<#= property.Name #>, sb);
<#+ 
            }
            else
            {
#>
            NodeToString.AppendValueTo(<#= property.Name #>, sb, <#= property.Name #>ToStringValueIfDefault);
<#+ 
            }
#>
<#+ 
        }
#>
<#+ 
    }
}
